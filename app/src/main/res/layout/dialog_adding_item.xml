<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/dialog_fixed_width_major"
    android:layout_height="@dimen/dialog_fixed_height_major"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".TodoListManagerActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:id="@+id/et_dialog_insert"
        android:text="@string/addDialogInsertTextHere"
        android:textSize="22dp"
        android:textColor="@color/defaultTextColor"
        android:background="@color/defaultBG"
        android:layout_alignParentTop="true"
        />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add"
        android:id="@+id/btn_dialog_add"
        android:layout_alignBottom="@+id/et_dialog_insert"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:id="@+id/btn_dialog_cancel"
        android:layout_alignBottom="@+id/et_dialog_insert"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>
